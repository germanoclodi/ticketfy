<%= if signed_in?(@conn) do %>
</br>
</br>

  <h5>Listing tickets</h5>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th class="text-center; vertical-align: middle">Titulo</th>
        <th class="text-center; vertical-align: middle">Tipo</th>
        <th class="text-center; vertical-align: middle">Categoria</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  <%= for ticket <- @tickets do %>
      <tr">
        <td class="text-center; vertical-align: middle"><%= ticket.titulo %></td>
        <td class="text-center; vertical-align: middle"><%= ticket.tipo %></td>
        <td class="text-center; vertical-align: middle"><%= ticket.categoria %></td>
        <td class="text-center">
          <%= button "Show", to: ticket_path(@conn, :show, ticket), style: "margin-right: 10px; margin-left: 10px", class: "btn btn-outline-success", method: :get %>
          <%= button "Edit", to: ticket_path(@conn, :edit, ticket), style: "margin-right: 10px; margin-left: 10px", class: "btn btn-outline-warning", method: :get %>
          <%= button "Delete", to: ticket_path(@conn, :delete, ticket), style: "margin-right: 10px; margin-left: 10px", method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-outline-danger btn-xs" %>
        </td>
      </tr>
  <% end %>
    </tbody>
  </table>
<% end %>
